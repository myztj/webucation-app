.goods-list .goods-item {
  display: flex;
  justify-content: space-between;
}
.goods-list .goods-item .goods-left {
  padding-right: 20rpx;
  width: 300rpx;
  flex-shrink: 0;
  position: relative;
}
.goods-list .goods-item .goods-left > image {
  width: 100%;
  height: 170rpx;
}
.goods-list .goods-item .goods-left .ico {
  position: absolute;
  right: 25rpx;
  bottom: 15rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 5rpx;
  padding: 3rpx 8rpx;
  font-size: 24rpx;
}
.goods-list .goods-item .goods-right {
  flex: 1;
  width: 330rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list .goods-item .goods-right .right-up .title, .goods-list .goods-item .goods-right .right-up .info {
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.goods-list .goods-item .goods-right .right-up > view {
  overflow: hidden;
}
.goods-list .goods-item .goods-right .right-up .info {
  font-size: 24rpx;
  color: #6c757d;
  margin-top: 5rpx;
}
.goods-list .goods-item .goods-right .right-up .recommend {
  font-size: 24rpx;
  color: #6c757d;
  margin-top: 5rpx;
  padding: 10rpx 0;
}
.goods-list .goods-item .goods-right .right-down > text:nth-child(1) {
  font-size: 24rpx;
  color: red;
  margin-right: 10rpx;
}
.goods-list .goods-item .goods-right .right-down > text:nth-child(2) {
  font-size: 24rpx;
  color: #6c757d;
}
.column {
  display: flex;
  justify-content: space-between !important;
  flex-direction: column !important;
}
.columnImgWigth {
  width: 340rpx !important;
  height: 180rpx !important;
