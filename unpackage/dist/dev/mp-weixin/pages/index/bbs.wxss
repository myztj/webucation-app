.scrollView {
  white-space: nowrap;
}
.scrollView .scroll-item {
  display: inline-block;
  background-color: #f8f9fa;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  color: #6c757d;
}
.active {
  background-color: #5ccc84 !important;
  color: #fff !important;
}
.nav-box {
  display: flex;
  justify-content: space-around;
  border-top: 15rpx solid #f5f5f3;
  border-bottom: 15rpx solid #f5f5f3;
}
.nav-box .nav-left,
.nav-box .nav-right {
  display: flex;
  align-items: center;
}
.nav-box .nav-left > ._h3,
.nav-box .nav-right > ._h3 {
  font-size: 35rpx;
  color: #6c757d;
  padding: 20rpx 0;
}
.nav-box .nav-left > text,
.nav-box .nav-right > text {
  font-size: 34rpx;
  margin-left: 20rpx;
  color: #6c757d;
}
.list-box .list-item {
  padding: 30rpx;
  border-bottom: 15rpx solid #f5f5f3;
}
.list-box .list-item .item-up .userinfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-box .list-item .item-up .userinfo .tbg {
  background-color: #ffc107;
  height: 60rpx;
  padding: 0 20rpx;
  color: #fff;
  line-height: 60rpx;
  font-size: 28rpx;
}
.list-box .list-item .item-up .userinfo .userinfo-title {
  display: flex;
  flex-shrink: 0;
}
.list-box .list-item .item-up .userinfo .userinfo-title > image {
  margin-right: 15rpx;
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
}
.list-box .list-item .item-up .userinfo .userinfo-title .userinfo-name {
  display: flex;
  flex-direction: column;
}
.list-box .list-item .item-up .content {
  margin-top: 20rpx;
}
.list-box .list-item .item-up .img {
  display: flex;
  justify-content: space-between;
}
.list-box .list-item .item-up .img > image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 15rpx;
}
.list-box .list-item .item-down {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.list-box .list-item .item-down .icon {
  display: flex;
  align-items: center;
}
.list-box .list-item .item-down .icon .iconfont {
  font-size: 46rpx;
}
.list-box .list-item .item-down .icon .text {
  font-size: 35rpx;
  padding: 0 20rpx;
}

