.login-case {
  background-color: #fff;
  padding: 0 65rpx;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  margin-top: -20rpx;
}
.login-case .login-title {
  font-size: 44rpx;
  color: #35404b;
  margin: 55rpx 0;
}
.login-case .uaer-operate {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.login-case .uaer-operate > text:nth-child(1) {
  color: #5ccc84;
}
.login-case .uaer-operate > text:nth-child(2) {
  color: #a9a5a0;
}
.login-case .third-party-login {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login-case .third-party-login .login-wx {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1rpx solid #5ccc84;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0 40rpx 0;
}
.login-case .third-party-login .login-wx > image {
  width: 56rpx;
  height: 54rpx;
}
.login-case .user-agreement {
  display: flex;
  align-items: center;
}
.login-case .user-agreement > text {
  font-size: 30rpx;
  color: #a9a5a0;
}
.uni-checkbox-input {
  width: 22px !important;
  height: 22px !important;
}

